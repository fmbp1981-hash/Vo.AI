# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Redis Cache
REDIS_URL="redis://localhost:6379"
# Or for Upstash (serverless Redis):
# REDIS_URL="redis://:password@endpoint.upstash.io:6379"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key-here"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl-rand-base64-32"

# WhatsApp Multi-Provider Configuration
# Escolha qual provider usar: evolution-api, z-api, whatsapp-business-api
WHATSAPP_PROVIDER="evolution-api"

# Evolution API (opção padrão)
EVOLUTION_API_URL="https://your-evolution-instance.com"
EVOLUTION_API_KEY="your-evolution-api-key"
EVOLUTION_INSTANCE_NAME="voai-agir"

# Z-API (alternativa)
ZAPI_URL="https://api.z-api.io/instances/YOUR_INSTANCE_ID"
ZAPI_INSTANCE_ID="your-zapi-instance-id"
ZAPI_TOKEN="your-zapi-token"

# WhatsApp Business API (oficial - futuro)
# WHATSAPP_BUSINESS_API_URL="https://graph.facebook.com/v18.0"
# WHATSAPP_BUSINESS_API_TOKEN="your-meta-business-token"
# WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"


# External API Integrations

# Amadeus API (Flights & Hotels)
# Sign up at: https://developers.amadeus.com/
AMADEUS_API_KEY="your-amadeus-api-key"
AMADEUS_API_SECRET="your-amadeus-api-secret"

# Google Places API (Destinations & Attractions)
# Enable at: https://console.cloud.google.com/apis/library/places-backend.googleapis.com
GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# Booking.com API (Hotels) - Optional
# Contact Booking.com Partner Hub: https://join.booking.com/
BOOKING_API_KEY="your-booking-api-key"

# Payment Integrations

# PagSeguro (Brazilian payments)
PAGSEGURO_EMAIL="your-pagseguro-email"
PAGSEGURO_TOKEN="your-pagseguro-token"
