# E2E Test Environment Variables
# Copy this file to .env.test and configure as needed

# Base URL for tests (override the default localhost:3000)
E2E_BASE_URL=http://localhost:3000

# Test user credentials
# Make sure these users exist in your database
TEST_ADMIN_EMAIL=admin@voai.test
TEST_ADMIN_PASSWORD=Test@123456

TEST_CONSULTANT_EMAIL=consultant@voai.test
TEST_CONSULTANT_PASSWORD=Test@123456

# Timeouts (in milliseconds)
E2E_TIMEOUT_SHORT=2000
E2E_TIMEOUT_MEDIUM=5000
E2E_TIMEOUT_LONG=10000
E2E_TIMEOUT_NAVIGATION=30000

# Debug mode (set to 'true' to enable verbose logging)
E2E_DEBUG=false

# Screenshot on failure (set to 'false' to disable)
E2E_SCREENSHOT=true

# Video recording (set to 'false' to disable)
E2E_VIDEO=true

# Slow down execution for debugging (milliseconds between actions)
E2E_SLOW_MO=0
